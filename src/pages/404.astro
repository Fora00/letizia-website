---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Pagina non trovata" description="La pagina che stai cercando non esiste">
  <Section centered>
    <div class="max-w-2xl mx-auto text-center py-12">
      <div class="text-8xl mb-6">404</div>
      <h1 class="font-heading font-bold text-3xl md:text-4xl text-navy dark:text-text-dark mb-4">
        Pagina non trovata
      </h1>
      <p class="text-lg text-navy/80 dark:text-text-dark/80 leading-relaxed mb-8">
        La pagina che stai cercando non esiste o Ã¨ stata spostata.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${base}/`}
          class="inline-block bg-accent dark:bg-accent-dark text-white dark:text-navy-dark font-semibold px-8 py-4 rounded-full hover:bg-navy dark:hover:bg-text-dark transition-colors"
        >
          Torna alla home
        </a>
        <a
          href={`${base}/contatti`}
          class="inline-block bg-sage-light dark:bg-sage-dark text-navy dark:text-text-dark font-semibold px-8 py-4 rounded-full hover:bg-sage hover:text-white dark:hover:bg-accent-dark dark:hover:text-navy-dark transition-colors"
        >
          Contattami
        </a>
      </div>
    </div>
  </Section>
</Layout>
