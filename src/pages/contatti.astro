---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import { social } from '../constants/socials';

const tallyFormId = import.meta.env.PUBLIC_TALLY_FORM_ID;
---

<Layout title="Contatti" description="Contattami per iniziare il tuo percorso di benessere">
  <Section>
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="font-heading font-bold text-4xl md:text-5xl text-navy mb-6">
        Contattami
      </h1>
      <p class="text-lg text-navy/80 leading-relaxed">
        Hai domande o vuoi iniziare un percorso insieme?
        Compila il form qui sotto o contattami direttamente.
        Ti risponder√≤ il prima possibile.
      </p>
    </div>

    <div class="grid lg:grid-cols-5 gap-12">
      <!-- Contact Form - Tally Embed -->
      <div class="lg:col-span-3">
        <div class="bg-sage-light rounded-2xl p-8">
          <h2 class="font-heading font-semibold text-2xl text-navy mb-6">
            Scrivimi un messaggio
          </h2>
          <!-- Replace this with your actual Tally form embed code -->
          <iframe
            data-tally-src={`https://tally.so/embed/${tallyFormId}?alignLeft=1&hideTitle=1&transparentBackground=1`}
            loading="lazy"
            width="100%"
            height="500"
            frameborder="0"
            marginheight="0"
            marginwidth="0"
            title="Contact Form"
            class="rounded-lg"
          ></iframe>
          <script>
            // Tally embed script
            var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w;s.onload=v;s.onerror=v;d.body.appendChild(s);}
          </script>
          <noscript>
            <p class="text-navy/70">
              Per utilizzare il form di contatto, abilita JavaScript nel tuo browser.
              In alternativa, scrivimi a <a href="mailto:info@letiziamancini.it" class="text-accent hover:underline">info@letiziamancini.it</a>
            </p>
          </noscript>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Calendly Booking -->
        <a
          href="https://calendly.com/letiziamancini-chinesiologa/prenota_gratis?share_attribution=send_from_calendly_et_card"
          target="_blank"
          rel="noopener noreferrer"
          class="block bg-accent text-white rounded-2xl p-6 shadow-md hover:bg-navy transition-colors group"
        >
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center shrink-0">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-heading font-semibold text-xl mb-1">
                Prenota una consulenza gratuita
              </h3>
              <p class="text-white/80 text-sm">
                Scegli il giorno e l'orario che preferisci
              </p>
            </div>
            <svg class="w-6 h-6 ml-auto group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>

        <div class="bg-white rounded-2xl p-6 shadow-md">
          <h3 class="font-heading font-semibold text-xl text-navy mb-4">
            Informazioni di contatto
          </h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div>
                <p class="font-medium text-navy">Email</p>
                <a href=`mailto:${social.mail}` class="text-accent hover:underline">
                  {social.mail}
                </a>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <p class="font-medium text-navy">Studio Trento</p>
                <p class="text-navy/70">Via Brescia, 15 - Trento</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <p class="font-medium text-navy">Rovereto</p>
                <p class="text-navy/70">Su appuntamento</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-accent shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <div>
                <p class="font-medium text-navy">Online</p>
                <p class="text-navy/70">Consulenze in videochiamata</p>
              </div>
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-md">
          <h3 class="font-heading font-semibold text-xl text-navy mb-4">
            Seguimi sui social
          </h3>
          <div class="flex gap-4">
            <a
              href={social.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-sage-light rounded-full flex items-center justify-center hover:bg-sage transition-colors group"
              aria-label="Facebook"
            >
              <svg class="w-6 h-6 fill-navy group-hover:fill-white transition-colors" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
              </svg>
            </a>
            <a
              href={social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-sage-light rounded-full flex items-center justify-center hover:bg-sage transition-colors group"
              aria-label="LinkedIn"
            >
              <svg class="w-6 h-6 fill-navy group-hover:fill-white transition-colors" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
              </svg>
            </a>
            <a
              href={social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 bg-sage-light rounded-full flex items-center justify-center hover:bg-sage transition-colors group"
              aria-label="Instagram"
            >
              <svg class="w-6 h-6 fill-navy group-hover:fill-white transition-colors" viewBox="0 0 24 24">
                <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.757-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z" />
              </svg>
            </a>
          </div>
        </div>

      </div>
    </div>
  </Section>
</Layout>
