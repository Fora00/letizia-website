---
interface Props {
  title: string;
  subtitle?: string;
  showCta?: boolean;
  ctaText?: string;
  ctaHref?: string;
  imageSrc?: string;
  imageAlt?: string;
  backgroundSrc?: string;
}

const {
  title,
  subtitle,
  showCta = false,
  ctaText = "Contattami",
  ctaHref = "/contatti",
  imageSrc,
  imageAlt = "Letizia Mancini",
  backgroundSrc
} = Astro.props;
---

<section class="relative py-16 md:py-24 bg-sage-light dark:bg-surface-dark overflow-hidden transition-colors duration-200">
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="order-2 md:order-1">
        <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-navy dark:text-text-dark mb-6 leading-tight">
          {title}
        </h1>
        {subtitle && (
          <p class="text-lg md:text-xl text-navy/80 dark:text-text-dark/80 mb-8 leading-relaxed">
            {subtitle}
          </p>
        )}
        {showCta && (
          <a
            href={ctaHref}
            class="inline-block bg-accent dark:bg-accent-dark text-white dark:text-navy-dark font-semibold px-8 py-4 rounded-full hover:bg-navy dark:hover:bg-text-dark transition-colors"
          >
            {ctaText}
          </a>
        )}
      </div>
      <div class="order-1 md:order-2 flex justify-center">
        <div class="relative">
          {backgroundSrc && (
            <>
              {/* Mobile: background cut in half vertically */}
              <div
                class="absolute -inset-4 top-1/2 rounded-2xl overflow-hidden md:hidden"
              >
                <img
                  src={backgroundSrc}
                  alt=""
                  class="w-full h-full object-cover opacity-50"
                />
              </div>
              {/* Desktop: full background */}
              <div
                class="absolute -inset-8 rounded-2xl overflow-hidden hidden md:block"
              >
                <img
                  src={backgroundSrc}
                  alt=""
                  class="w-full h-full object-cover opacity-50"
                />
              </div>
            </>
          )}
          {imageSrc ? (
            <img
              src={imageSrc}
              alt={imageAlt}
              class="relative z-10 rounded-2xl max-w-sm w-full object-cover"
            />
          ) : (
            <div class="relative z-10 w-72 h-96 bg-sage dark:bg-sage-dark rounded-2xl flex items-center justify-center">
              <span class="text-white/60 dark:text-text-dark/60 text-sm">Immagine profilo</span>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>
