---
interface Props {
  title: string;
  subtitle?: string;
  showCta?: boolean;
  ctaText?: string;
  ctaHref?: string;
  imageSrc?: string;
  imageAlt?: string;
  backgroundSrc?: string;
}

const base = import.meta.env.BASE_URL;

const {
  title,
  subtitle,
  showCta = false,
  ctaText = "Contattami",
  ctaHref = "/contatti",
  imageSrc,
  imageAlt = "Letizia Mancini",
  backgroundSrc
} = Astro.props;
---

<section class="relative bg-sage-light dark:bg-surface-dark overflow-hidden transition-colors duration-200">
  {/* Desktop: background on left side, full height */}
  {backgroundSrc && (
    <div
      class="absolute inset-y-0 left-0 w-1/2 overflow-hidden hidden md:block"
    >
      <img
        src={backgroundSrc}
        alt=""
        class="w-full h-full object-cover opacity-20"
      />
    </div>
  )}

  {/* Desktop: profile image centered in right half, at bottom */}
  <div class="absolute bottom-0 right-0 w-1/2 hidden md:flex justify-center z-20">
    <a
      href={`${base}/chi-sono`}
      class="block group"
    >
      {imageSrc ? (
        <img
          src={imageSrc}
          alt={imageAlt}
          class="h-80 w-auto object-cover rounded-t-2xl transition-transform group-hover:scale-105 origin-bottom"
        />
      ) : (
        <div class="w-72 h-80 bg-sage dark:bg-sage-dark rounded-t-2xl flex items-center justify-center">
          <span class="text-white/60 dark:text-text-dark/60 text-sm">Immagine profilo</span>
        </div>
      )}
    </a>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="order-2 md:order-1">
        <h1 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-navy dark:text-text-dark mb-6 leading-tight">
          {title}
        </h1>
        {subtitle && (
          <p class="text-lg md:text-xl text-navy/80 dark:text-text-dark/80 mb-8 leading-relaxed">
            {subtitle}
          </p>
        )}
        {showCta && (
          <a
            href={ctaHref}
            class="inline-block bg-accent dark:bg-accent-dark text-white dark:text-navy-dark font-semibold px-8 py-4 rounded-full hover:bg-navy dark:hover:bg-text-dark transition-colors"
          >
            {ctaText}
          </a>
        )}
      </div>

      {/* Mobile: profile image centered with background */}
      <div class="order-1 md:order-2 flex justify-center md:hidden">
        <a href={`${base}/chi-sono`} class="relative block group">
          {backgroundSrc && (
            <div
              class="absolute -inset-4 top-1/2 rounded-2xl overflow-hidden"
            >
              <img
                src={backgroundSrc}
                alt=""
                class="w-full h-full object-cover opacity-50"
              />
            </div>
          )}
          {imageSrc ? (
            <img
              src={imageSrc}
              alt={imageAlt}
              class="relative z-10 rounded-2xl max-w-sm w-full object-cover transition-transform group-hover:scale-105"
            />
          ) : (
            <div class="relative z-10 w-72 h-96 bg-sage dark:bg-sage-dark rounded-2xl flex items-center justify-center">
              <span class="text-white/60 dark:text-text-dark/60 text-sm">Immagine profilo</span>
            </div>
          )}
        </a>
      </div>
    </div>
  </div>
</section>
