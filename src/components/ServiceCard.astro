---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<article class="bg-white rounded-2xl p-6 shadow-md hover:shadow-lg transition-shadow border border-sage/20">
  {icon && (
    <div class="w-14 h-14 bg-sage-light rounded-xl flex items-center justify-center mb-4">
      <span class="text-2xl">{icon}</span>
    </div>
  )}
  <h3 class="font-heading font-semibold text-xl text-navy mb-3">{title}</h3>
  <p class="text-navy/70 leading-relaxed">{description}</p>
</article>
